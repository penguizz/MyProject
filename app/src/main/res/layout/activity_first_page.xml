<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#fff"
    tools:context="com.example.desktop.myproject.First_page">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:inputType="phone"
            android:gravity="center"
            android:textSize="22dp"
            android:paddingBottom="20dp"
            android:textColor="#2a2a2a"
            android:hint="(+66) Phone Number"/>


        <Button
            android:id="@+id/PhoneVerify"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/background_login"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/phone_number"
            android:layout_alignStart="@+id/phone_number"
            android:layout_below="@+id/phone_number"
            android:layout_marginTop="80dp"
            android:text="Next" />

        <Button
            android:id="@+id/back_to_login"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignLeft="@+id/PhoneVerify"
            android:layout_alignStart="@+id/PhoneVerify"
            android:layout_below="@+id/PhoneVerify"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_register"
            android:text="Log in"
            android:textColor="#ffffff" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="70dp"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                        <EditText
                            android:id="@+id/OTPeditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView2"
                            android:layout_marginTop="200dp"
                            android:visibility="gone"
                            android:ems="10"
                            android:hint="OTP"
                            android:inputType="textPersonName"
                            android:gravity="center"
                            android:textSize="22dp"
                            android:paddingBottom="20dp"
                            android:textColor="#2a2a2a"/>

                        <Button
                            android:id="@+id/OTPVerify"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@drawable/background_login"
                            android:textColor="#ffffff"
                            android:visibility="gone"
                            android:layout_centerHorizontal="true"
                            android:layout_alignLeft="@+id/OTPeditText"
                            android:layout_alignStart="@+id/OTPeditText"
                            android:layout_below="@+id/OTPeditText"
                            android:layout_marginTop="80dp"
                            android:text="Next" />

                        <Button
                            android:id="@+id/login"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_alignLeft="@+id/OTPVerify"
                            android:layout_alignStart="@+id/OTPVerify"
                            android:layout_below="@+id/OTPVerify"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background_register"
                            android:text="Log in"
                            android:visibility="invisible"
                            android:textColor="#ffffff" />
                </RelativeLayout>
        </FrameLayout>


</RelativeLayout>


